<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="18dp"
    android:paddingTop="18dp"
    android:paddingHorizontal="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whitegreen"
    tools:context=".ui.main.setting.LogoutActivity"
    tools:ignore="RtlSymmetry">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/backpress"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/backbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃하기"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backpress"
            android:textSize="22sp"
            android:fontFamily="@font/suit_medium"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/logout_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃 하시겠습니까?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/suit_medium"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/edit_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃하기"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/logout_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/border_basic"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="50dp" />



</androidx.constraintlayout.widget.ConstraintLayout>