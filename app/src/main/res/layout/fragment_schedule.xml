<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whitegreen"
    tools:ignore="MissingDefaultResource" >

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 일정인가요?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="44dp"
        android:textColor="@color/green"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/todo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="일정 이름을 입력해주세요"
        android:padding="13dp"
        android:singleLine="true"
        android:textColorHint="@color/graygreen"
        android:background="@drawable/btborder"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@+id/info_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/info_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진행될 날짜를 적어주세요."
        app:layout_constraintTop_toBottomOf="@+id/todo_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="44dp"
        android:textColor="@color/green"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edit_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="칸을 눌러 날짜 선택하기"
        android:padding="13dp"
        android:singleLine="true"
        android:textColorHint="@color/graygreen"
        android:background="@drawable/btborder"
        android:textColor="@color/green"
        app:layout_constraintTop_toBottomOf="@+id/info_text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="false"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/info_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구체적인 시간을 적어주세요."
        app:layout_constraintTop_toBottomOf="@+id/edit_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="44dp"
        android:textColor="@color/green"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="칸을 눌러 시간 선택하기"
        android:padding="13dp"
        android:singleLine="true"
        android:textColorHint="@color/graygreen"
        android:background="@drawable/btborder"
        android:textColor="@color/green"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@+id/info_text3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:textSize="16sp" />

    <Button
        android:id="@+id/add_todo_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/schedule_add_btn"
        android:background="@drawable/btn_roundbtn"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
